{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": "./src", // O '.' si tus alias parten de la ra√≠z del proyecto
    "paths": {
      "@assets/*": ["assets/*"],
      "@domain/*": ["domain/*"],
      "@data/*": ["data/*"],
      "@presentation/*": ["presentation/*"],
      "@components/*": ["presentation/components/*"],
      "@screens/*": ["presentation/screens/*"],
      "@utils/*": ["presentation/utils/*"],
    },
    "skipLibCheck": true // Temporal para resolver warning de Vector- Icons
  }
}
